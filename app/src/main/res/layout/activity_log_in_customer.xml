<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.umaradkhamov.signup.LogInCustomer">

    <EditText
        android:id="@+id/CustPswET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteY="176dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/CustLoginBtn"
        android:layout_alignStart="@+id/CustUnameET" />

    <EditText
        android:id="@+id/CustUnameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="97dp"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/CustPswET"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/CustLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="253dp"
        android:layout_above="@+id/CustSignUpBtn"
        android:layout_alignStart="@+id/CustSignUpBtn" />

    <Button
        android:id="@+id/CustSignUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="347dp"
        android:layout_marginBottom="121dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/CustWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CustLoginBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp" />




</RelativeLayout>
